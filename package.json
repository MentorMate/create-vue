{
  "name": "@mentormate/create-vue",
  "version": "0.3.1",
  "description": "🛠️ Extended way to start a Vite-powered Vue project",
  "type": "module",
  "bin": {
    "create-vue": "outfile.cjs"
  },
  "files": [
    "locales",
    "outfile.cjs",
    "template"
  ],
  "engines": {
    "node": ">=v16.20.0"
  },
  "scripts": {
    "dev": "chokidar \"index.ts\" \"scripts/**/*\" \"template/**/*\" \"utils/**/*\" -c \"npm run build\"",
    "prepare": "husky install",
    "format": "prettier --write .",
    "build": "zx ./scripts/build.mjs",
    "test:unit": "vitest",
    "snapshot": "zx ./scripts/snapshot.mjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MentorMate/create-vue.git"
  },
  "keywords": [
    "Extended Vue CLI",
    "Vuejs",
    "Custom CLI",
    "Vue Template",
    "Vite"
  ],
  "author": "MentorMate",
  "contributors": [
    {
      "name": "Yordan Ramchev",
      "email": "yordan.ramchev@mentormate.com"
    },
    {
      "name": "Georgi Mateev",
      "email": "georgi.mateev@mentormate.com"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MentorMate/create-vue/issues"
  },
  "homepage": "https://github.com/MentorMate/create-vue#readme",
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@tsconfig/node18": "^18.2.2",
    "@types/eslint": "^8.44.8",
    "@types/node": "^20.10.3",
    "@types/prompts": "^2.4.9",
    "@vue/create-eslint-config": "^0.3.2",
    "@vue/tsconfig": "^0.4.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "ejs": "^3.1.9",
    "esbuild": "^0.19.5",
    "esbuild-plugin-license": "^1.2.2",
    "husky": "^8.0.3",
    "kolorist": "^1.8.0",
    "lint-staged": "^15.2.0",
    "minimist": "^1.2.8",
    "npm-run-all2": "^6.1.1",
    "prettier": "^3.1.0",
    "prompts": "^2.4.2",
    "vitest": "^0.34.6",
    "zx": "^7.2.3",
    "chokidar-cli": "^3.0.0"
  },
  "lint-staged": {
    "*.{js,ts,vue,json}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
