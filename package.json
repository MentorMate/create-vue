{
  "name": "@mentormate/create-vue",
  "version": "1.0.1",
  "description": "🛠️ Extended way to start a Vite-powered Vue project",
  "type": "module",
  "bin": {
    "create-vue": "outfile.cjs"
  },
  "files": [
    "locales",
    "outfile.cjs",
    "template"
  ],
  "engines": {
    "node": ">=v18.16.1"
  },
  "scripts": {
    "dev": "chokidar \"index.ts\" \"scripts/**/*\" \"template/**/*\" \"utils/**/*\" -c \"npm run build\"",
    "prepare": "husky",
    "format": "prettier --write .",
    "test:unit": "vitest",
    "build": "zx ./scripts/build.mjs",
    "snapshot": "zx ./scripts/snapshot.mjs",
    "test": "zx ./scripts/test.mjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MentorMate/create-vue.git"
  },
  "keywords": [
    "Extended Vue CLI",
    "Vuejs",
    "Custom CLI",
    "Vue Template",
    "Vite"
  ],
  "author": "MentorMate",
  "contributors": [
    {
      "name": "Yordan Ramchev",
      "email": "me@yramchev.com"
    },
    {
      "name": "Georgi Mateev",
      "email": "georgi.mateev@mentormate.com"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MentorMate/create-vue/issues"
  },
  "homepage": "https://github.com/MentorMate/create-vue#readme",
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/eslint": "^9.6.1",
    "@types/node": "^20.16.11",
    "@types/prompts": "^2.4.9",
    "@vue/create-eslint-config": "^0.4.2",
    "@vue/tsconfig": "^0.5.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "ejs": "^3.1.10",
    "esbuild": "^0.24.0",
    "esbuild-plugin-license": "^1.2.3",
    "husky": "^9.1.6",
    "kleur": "^4.1.5",
    "lint-staged": "^15.2.10",
    "npm-run-all2": "^6.2.3",
    "prettier": "^3.3.3",
    "prompts": "^2.4.2",
    "vitest": "^2.1.2",
    "zx": "^8.1.9",
    "chokidar-cli": "^3.0.0"
  },
  "lint-staged": {
    "*.{js,ts,vue,json}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
